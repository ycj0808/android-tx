<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView android:id="@+id/login_head_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_icon"
        android:layout_above="@+id/login_edit_account"
        android:contentDescription="@string/login_head_logo_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
	<EditText 
	    android:id="@+id/login_edit_account"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/edit_height"
	    android:hint="@string/login_hint_account"
	    android:layout_marginLeft="@dimen/edit_margin_left"
	    android:layout_marginRight="@dimen/edit_margin_right"
	    android:layout_marginBottom="3dp"
	    android:paddingLeft="@dimen/edit_padding_left"
	    android:layout_above="@+id/login_edit_password"
	    android:background="@drawable/mine_common_editbox_selector"
	    android:singleLine="true"
	    android:textSize="@dimen/edit_text_size"
	    />
	<EditText 
	    android:id="@+id/login_edit_password"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/edit_height"
	    android:layout_marginLeft="@dimen/edit_margin_left"
	    android:layout_marginRight="@dimen/edit_margin_right"
	    android:layout_marginTop="3dp"
	    android:paddingLeft="@dimen/edit_padding_left"
	    android:inputType="textPassword"
	    android:layout_centerInParent="true"
	    android:singleLine="true"
	    android:background="@drawable/mine_common_editbox_selector"
	    android:textSize="@dimen/edit_text_size"
	    android:hint="@string/login_hint_password"
	    />
	<Button android:id="@+id/login_btn_login"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/btn_login_height"
	    android:background="@drawable/mine_btn_login_bg"
	    android:layout_marginLeft="@dimen/edit_margin_left"
	    android:layout_marginRight="@dimen/edit_margin_right"
	     android:layout_marginTop="10dp"
	    android:layout_below="@+id/login_edit_password"
	    android:text="登陆"
	    android:textColor="#FFFFFF"
	    />
</RelativeLayout>
